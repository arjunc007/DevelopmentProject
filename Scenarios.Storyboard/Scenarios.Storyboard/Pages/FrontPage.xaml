<local:NavigablePage x:Class="Scenarios.Storyboard.Pages.FrontPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Scenarios.Storyboard.Pages"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Width="300" HorizontalAlignment="Center" Height="300">
            <Label Content="SCENARIOS" HorizontalAlignment="Center" FontSize="48"/>
            <Button Content="New Storyboard" Command="{Binding NewStoryboardCommand}"
                    Margin="0,0,0,5"/>
            <Button Content="Load Storyboard" Command="{Binding LoadStoryboardCommand}"
                    Margin="0,0,0,5" />
            <Button Content="Settings" Command="{Binding SettingsCommand}"></Button>
        </StackPanel>
    </Grid>
</local:NavigablePage>
